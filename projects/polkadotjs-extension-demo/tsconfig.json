{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "dist",
    "lib": [ "es6", "dom" ],
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "module": "es2015"
  },
  "include": ["src"]
}
